{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": ["ES2022", "dom"],
    "paths": {
      "@cockpit-app/shared/auth": ["libs/shared/auth/src/index.ts"],
      "@cockpit-app/shared/react-ui": ["libs/shared/react-ui/src/index.ts"],
      "@cockpit-app/shared/utils": ["libs/shared/utils/src/index.ts"],
      "@cockpit-app/shared/vue-ui": ["libs/shared/vue-ui/src/index.ts"],
      "@cockpit-app/types-ai-budget-categories": [
        "libs/types/ai-budget/categories/src/index.ts"
      ],
      "@cockpit-app/types-ai-budget-expenses": [
        "libs/types/ai-budget/expenses/src/index.ts"
      ],
      "@cockpit-app/types-ai-budget-payment-methods": [
        "libs/types/ai-budget/payment-methods/src/index.ts"
      ],
      "@cockpit-app/types-shared-auth": ["libs/types/shared/auth/src/index.ts"],
      "@cockpit-app/types-shared-roles": [
        "libs/types/shared/roles/src/index.ts"
      ],
      "@cockpit-app/types-shared-users": [
        "libs/types/shared/users/src/index.ts"
      ],
      "@cockpit-app/types-shared-utils": [
        "libs/types/shared/utils/src/index.ts"
      ],
      "@cockpit-app/types-system-health": [
        "libs/types/system/health/src/index.ts"
      ],
      "@cockpit-app/types-system-root": ["libs/types/system/root/src/index.ts"],
      "@cockpit-app/types-todo-items": ["libs/types/todo/items/src/index.ts"],
      "@cockpit-app/types-todo-projects": [
        "libs/types/todo/projects/src/index.ts"
      ]
    },
    "rootDir": "."
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "exclude": ["node_modules", "tmp"]
}
